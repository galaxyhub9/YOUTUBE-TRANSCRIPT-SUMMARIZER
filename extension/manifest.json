{
  "manifest_version": 3,
  "name": "MADHURI",
  "description": "Summarize YouTube video transcripts with ease.",
  "version": "1.0",
  "permissions": ["activeTab", "storage","declarativeContent"],


  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup.html"
            },

  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }


}


